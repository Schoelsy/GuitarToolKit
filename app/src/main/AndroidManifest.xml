<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.schoe.myapplication">

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name">
        <activity android:name=".MainActivity"
            android:theme="@android:style/Theme.Material"
            tools:targetApi="lollipop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Metronome"
            android:theme="@android:style/Theme.Material"
            tools:targetApi="lollipop"/>
        <activity android:name=".ChordsTranspositions"
            android:theme="@android:style/Theme.Material"
            tools:targetApi="lollipop"/>
        <activity android:name=".Chords"
            android:theme="@android:style/Theme.Material"
            tools:targetApi="lollipop"/>
        <activity
            android:name=".Song"
            android:windowSoftInputMode="adjustPan"
            android:theme="@android:style/Theme.Material"
            tools:targetApi="lollipop"/>
        <activity android:name=".Tuner"
            android:theme="@android:style/Theme.Material"
            tools:targetApi="lollipop"></activity>
    </application>

</manifest>